    <!-- –°–ï–ö–¶–ò–Ø 3 -->
    <div class="section">
        <div class="question" onclick="toggleSection(3)">
            –ß—Ç–æ —É–∂–µ —Å–¥–µ–ª–∞–Ω–æ?
        </div>
        <div class="answer" id="section3">
            <p>‚úÖ –ü–æ—Å—Ç—Ä–æ–µ–Ω–∞ —Ö–∏–∂–∏–Ω–∞</p>
            <p>‚úÖ –î–æ–±—ã—Ç—ã –∞–ª–º–∞–∑—ã</p>
            <p>üîÑ –°—Ç—Ä–æ–∏—Ç—Å—è —Ñ–µ—Ä–º–∞</p>
            <p>‚ùå –ù–µ —É–±–∏—Ç –î—Ä–∞–∫–æ–Ω</p>
            
            <!-- –ö–û–ú–ú–ï–ù–¢–ê–†–ò–ò -->
            <div style="margin-top: 20px; border-top: 2px dashed #5a4a3a; padding-top: 20px;">
                <h4>üí¨ –ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–∏</h4>
                <div id="comments3"></div>
                <textarea id="comment3" placeholder="–í–∞—à –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π..." rows="3"></textarea>
                <button onclick="addComment('progress')">–û—Ç–ø—Ä–∞–≤–∏—Ç—å</button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <script>
        // üîß –ù–ê–°–¢–†–û–ô–ö–ò SUPABASE
        const SUPABASE_URL = 'https://vpgzjvkrqgvcewjhxuay.supabase.co';
        const SUPABASE_KEY = 'sb_publishable_q-PJ_EmdubLQ9o46S1tVDg_XH1ucyHE';
        
        // üì¶ –ü–û–î–ö–õ–Æ–ß–ï–ù–ò–ï
        const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_KEY);
        
        // üë§ –¢–ï–ö–£–©–ò–ô –ü–û–õ–¨–ó–û–í–ê–¢–ï–õ–¨
        let currentUser = null;
        
        // üöÄ –ó–ê–ì–†–£–ó–ö–ê –°–ê–ô–¢–ê
        window.onload = async function() {
            await checkAuth();
            loadComments();
            toggleSection(1); // –û—Ç–∫—Ä—ã–≤–∞–µ–º –ø–µ—Ä–≤—É—é —Å–µ–∫—Ü–∏—é
        };
        
        // üîê –ü–†–û–í–ï–†–ö–ê –ê–í–¢–û–†–ò–ó–ê–¶–ò–ò
        async function checkAuth() {
            const { data: { user } } = await supabase.auth.getUser();
            
            if (user) {
                currentUser = user;
                showUserInfo();
                document.getElementById('authSection').style.display = 'none';
                document.getElementById('userInfo').style.display = 'block';
            } else {
                document.getElementById('authSection').style.display = 'block';
                document.getElementById('userInfo').style.display = 'none';
            }
        }
        
        // üë§ –ü–û–ö–ê–ó–ê–¢–¨ –ò–ù–§–û –û –ü–û–õ–¨–ó–û–í–ê–¢–ï–õ–ï
        async function showUserInfo() {
            // –ü–æ–ª—É—á–∞–µ–º –ø—Ä–æ—Ñ–∏–ª—å
            const { data: profile } = await supabase
                .from('profiles')
                .select('username')
                .eq('id', currentUser.id)
                .single();
            
            if (profile) {
                document.getElementById('username').textContent = profile.username;
            } else {
                document.getElementById('username').textContent = currentUser.email;
            }
        }
        
        // üîÑ –ü–ï–†–ï–ö–õ–Æ–ß–ï–ù–ò–ï –§–û–†–ú
        function showLogin() {
            document.getElementById('registerForm').style.display = 'none';
            document.getElementById('loginForm').style.display = 'block';
            clearAuthMessage();
        }
        
        function showRegister() {
            document.getElementById('loginForm').style.display = 'none';
            document.getElementById('registerForm').style.display = 'block';
            clearAuthMessage();
        }
        
        function clearAuthMessage() {
            const msg = document.getElementById('authMessage');
            msg.style.display = 'none';
            msg.textContent = '';
        }
        
        // üìù –†–ï–ì–ò–°–¢–†–ê–¶–ò–Ø (–ü–†–û–°–¢–ê–Ø!)
        async function register() {
            const username = document.getElementById('regUsername').value.trim();
            const email = document.getElementById('regEmail').value.trim();
            const password = document.getElementById('regPassword').value;
            const msg = document.getElementById('authMessage');
            
            // –ü—Ä–æ–≤–µ—Ä–∫–∞
            if (!username || !email || !password) {
                showMessage('–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è', 'error');
                return;
            }
            
            if (password.length < 6) {
                showMessage('–ü–∞—Ä–æ–ª—å –º–∏–Ω–∏–º—É–º 6 —Å–∏–º–≤–æ–ª–æ–≤', 'error');
                return;
            }
            
            try {
                // 1. –†–µ–≥–∏—Å—Ç—Ä–∏—Ä—É–µ–º –≤ Supabase
                const { data: authData, error: authError } = await supabase.auth.signUp({
                    email: email,
                    password: password
                });
                
                if (authError) {
                    showMessage(authError.message, 'error');
                    return;
                }
                
                // 2. –°–æ–∑–¥–∞–µ–º –ø—Ä–æ—Ñ–∏–ª—å –≤ —Ç–∞–±–ª–∏—Ü–µ profiles
                const { error: profileError } = await supabase
                    .from('profiles')
                    .insert({
                        id: authData.user.id,
                        username: username
                    });
                
                if (profileError) {
                    showMessage(profileError.message, 'error');
                } else {
                    showMessage('–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è —É—Å–ø–µ—à–Ω–∞! –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –ø–æ—á—Ç—É.', 'success');
                    setTimeout(() => {
                        location.reload();
                    }, 2000);
                }
                
            } catch (err) {
                showMessage('–û—à–∏–±–∫–∞: ' + err.message, 'error');
            }
        }
        
        // üîì –í–•–û–î
        async function login() {
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            const msg = document.getElementById('authMessage');
            
            if (!email || !password) {
                showMessage('–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è', 'error');
                return;
            }
            
            try {
                const { data, error } = await supabase.auth.signInWithPassword({
                    email: email,
                    password: password
                });
                
                if (error) {
                    showMessage(error.message, 'error');
                } else {
                    showMessage('–í—Ö–æ–¥ —É—Å–ø–µ—à–µ–Ω!', 'success');
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                }
            } catch (err) {
                showMessage('–û—à–∏–±–∫–∞ —Å–µ—Ç–∏', 'error');
            }
        }
        
        // üö™ –í–´–•–û–î
        async function logout() {
            await supabase.auth.signOut();
            location.reload();
        }
        
        // üìñ –†–ê–°–ö–†–´–¢–ò–ï –°–ï–ö–¶–ò–ô
        function toggleSection(num) {
            const section = document.getElementById('section' + num);
            const isVisible = section.classList.contains('show');
            
            // –ó–∞–∫—Ä—ã–≤–∞–µ–º –≤—Å–µ
            for (let i = 1; i <= 3; i++) {
                document.getElementById('section' + i).classList.remove('show');
            }
            
            // –û—Ç–∫—Ä—ã–≤–∞–µ–º –Ω—É–∂–Ω—É—é
            if (!isVisible) {
                section.classList.add('show');
            }
        }
        
        // üí¨ –ö–û–ú–ú–ï–ù–¢–ê–†–ò–ò
        async function loadComments() {
            const sections = [
                { id: 'comments1', section: 'what' },
                { id: 'comments2', section: 'goals' },
                { id: 'comments3', section: 'progress' }
            ];
            
            for (const item of sections) {
                const container = document.getElementById(item.id);
                
                try {
                    // –ü—Ä–æ–±—É–µ–º –ø–æ–ª—É—á–∏—Ç—å –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–∏
                    const { data: comments, error } = await supabase
                        .from('comments')
                        .select('*')
                        .eq('section', item.section)
                        .order('created_at', { ascending: false })
                        .limit(10);
                    
                    if (error) {
                        // –ï—Å–ª–∏ —Ç–∞–±–ª–∏—Ü—ã –Ω–µ—Ç - —Å–æ–∑–¥–∞–µ–º –ø—Ä–æ—Å—Ç–æ–π –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å
                        container.innerHTML = '<p>–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–µ–≤ –ø–æ–∫–∞ –Ω–µ—Ç</p>';
                        continue;
                    }
                    
                    if (!comments || comments.length === 0) {
                        container.innerHTML = '<p>–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–µ–≤ –ø–æ–∫–∞ –Ω–µ—Ç</p>';
                        continue;
                    }
                    
                    let html = '';
                    comments.forEach(comment => {
                        html += `
                            <div class="comment">
                                <strong>${comment.username || '–ê–Ω–æ–Ω–∏–º'}:</strong>
                                <p>${comment.content}</p>
                                <small style="color: #888;">${new Date(comment.created_at).toLocaleDateString()}</small>
                            </div>
                        `;
                    });
                    
                    container.innerHTML = html;
                    
                } catch (err) {
                    container.innerHTML = '<p>–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏</p>';
                }
            }
        }
        
        // ‚ûï –î–û–ë–ê–í–õ–ï–ù–ò–ï –ö–û–ú–ú–ï–ù–¢–ê–†–ò–Ø
        async function addComment(section) {
            if (!currentUser) {
                showMessage('–í–æ–π–¥–∏—Ç–µ —á—Ç–æ–±—ã –∫–æ–º–º–µ–Ω—Ç–∏—Ä–æ–≤–∞—Ç—å', 'error');
                return;
            }
            
            const sectionMap = {
                'what': { textarea: 'comment1', container: 'comments1' },
                'goals': { textarea: 'comment2', container: 'comments2' },
                'progress': { textarea: 'comment3', container: 'comments3' }
            };
            
            const config = sectionMap[section];
            const textarea = document.getElementById(config.textarea);
            const content = textarea.value.trim();
            
            if (!content) {
                showMessage('–í–≤–µ–¥–∏—Ç–µ —Ç–µ–∫—Å—Ç', 'error');
                return;
            }
            
            try {
                // –ü–æ–ª—É—á–∞–µ–º –∏–º—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
                const { data: profile } = await supabase
                    .from('profiles')
                    .select('username')
                    .eq('id', currentUser.id)
                    .single();
                
                // –°–æ–∑–¥–∞–µ–º —Ç–∞–±–ª–∏—Ü—É comments –µ—Å–ª–∏ –µ—ë –Ω–µ—Ç
                const { error } = await supabase
                    .from('comments')
                    .insert({
                        user_id: currentUser.id,
                        username: profile?.username || currentUser.email,
                        content: content,
                        section: section
                    });
                
                if (error) {
                    // –ï—Å–ª–∏ —Ç–∞–±–ª–∏—Ü—ã –Ω–µ—Ç, –∏—Å–ø–æ–ª—å–∑—É–µ–º localStorage
                    saveCommentLocal(section, content, profile?.username || currentUser.email);
                } else {
                    textarea.value = '';
                    loadComments();
                    showMessage('–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π –¥–æ–±–∞–≤–ª–µ–Ω!', 'success');
                }
                
            } catch (err) {
                // Fallback –Ω–∞ localStorage
                saveCommentLocal(section, content, '–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å');
            }
        }
        
        // üíæ LOCALSTORAGE (–µ—Å–ª–∏ Supabase –Ω–µ —Ä–∞–±–æ—Ç–∞–µ—Ç)
        function saveCommentLocal(section, content, username) {
            const key = `comments_${section}`;
            const comments = JSON.parse(localStorage.getItem(key) || '[]');
            
            comments.unshift({
                username: username,
                content: content,
                time: new Date().toLocaleString()
            });
            
            localStorage.setItem(key, JSON.stringify(comments));
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ
            const sectionMap = {
                'what': 'comments1',
                'goals': 'comments2',
                'progress': 'comments3'
            };
            
            const container = document.getElementById(sectionMap[section]);
            let html = '';
            comments.forEach(comment => {
                html += `
                    <div class="comment">
                        <strong>${comment.username}:</strong>
                        <p>${comment.content}</p>
                        <small style="color: #888;">${comment.time}</small>
                    </div>
                `;
            });
            
            container.innerHTML = html;
            document.getElementById(`comment${section === 'what' ? 1 : section === 'goals' ? 2 : 3}`).value = '';
            showMessage('–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π —Å–æ—Ö—Ä–∞–Ω–µ–Ω –ª–æ–∫–∞–ª—å–Ω–æ', 'success');
        }
        
        // üí¨ –°–û–û–ë–©–ï–ù–ò–Ø
        function showMessage(text, type) {
            const msg = document.getElementById('authMessage');
            msg.textContent = text;
            msg.style.display = 'block';
            msg.style.background = type === 'error' ? '#ff6b6b20' : '#51cf6620';
            msg.style.color = type === 'error' ? '#ff6b6b' : '#51cf66';
            msg.style.border = type === 'error' ? '1px solid #ff6b6b' : '1px solid #51cf66';
            
            setTimeout(() => {
                msg.style.display = 'none';
            }, 3000);
        }
    </script>
</body>
